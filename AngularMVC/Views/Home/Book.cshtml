@{
    ViewBag.Title = "Books List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts {

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/AngularDemo.js"></script>

    <style type="text/css">
        [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
    display: none !important;
}

body {
    margin: 20px;
    font-family: "Arial", "Helventica", sans-serif;
}

label {
    width: 80px;
    display: inline-block;
}

button {
    display: inline-block;
    outline: none;
    cursor: pointer;
    text-align: center;
    text-decoration: none;
    padding: .4em 1.1em .4em;
    color: #fef4e9;
    border: solid 1px #006fb9;
    background: #1276bb;
}

    button:hover {
        text-decoration: none;
        background: #282828;
        border: solid 1px #000;
    }

table {
    padding-top: 1em;
}

thead, tfoot {
    font-weight: 600;
}

th, td {
    padding: .1em .5em;
    text-align: left;
}

    td li, td ul {
        margin: 0;
        padding: 0;
    }

    td li {
        display: inline;
    }

        td li::after {
            content: ',';
        }

        td li:last-child::after {
            content: '';
        }

    </style>
}

<div ng-app="demoModule" id="body">
    <div ng-controller="demoCtrl">
        <h2>Books Gallery</h2>

        <h3>List of Books</h3>

        <table ng-cloak>
            <thead>
                <tr>
                    <th style="display: none;">ID</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="items in booksData">
                    <td hidden="hidden">{{items.Id}}</td>
                    <td>{{items.Name}}</td>
                    <td>{{items.Category}}</td>
                    <td>{{items.Price}}</td>
                    <td>
                        <button ng-model="$scope.Book" ng-click="edit(booksData[$index])">Edit</button>
                        <button ng-click="delete($index)">Delete</button>
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6">
                        <hr />
                    </td>
                </tr>
                <tr>
                    <td>Total :</td>
                    <td></td>
                    <td><label ng-bind="total()"></label></td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
        <br />
        <div style="border-top: solid 2px #282828; width: 430px; height: 10px"> </div>
        {{Book.Id}}
        <div ng-show="Book.Id != '' ">
            <div>
                <h2>Update Book</h2>
            </div>
            <div hidden="hidden">
                <label for="id">Id</label>
                <input type="text" data-ng-model="Book.Id" />
            </div>
            <div>
                <label for="name">Name</label>
                <input type="text" data-ng-model="Book.Name" />
            </div>

            <div>
                <label for="category">Category</label>
                <input type="text" data-ng-model="Book.Category" />
            </div>

            <div>
                <label for="price">Price</label>
                <input type="text" data-ng-model="Book.Price" />
            </div>
            <br />
            <div>
                <button data-ng-click="update()">Update</button>
                <button data-ng-click="cancel()">Cancel</button>
            </div>
        </div>

        <div ng-hide="Book.Id != '' ">
            <div>
                <h2>Add New Book</h2>
            </div>
            <div>
                <label for="name">Name</label>
                <input type="text" data-ng-model="Book.Name" />
            </div>

            <div>
                <label for="category">Category</label>
                <input type="text" data-ng-model="Book.Category" />
            </div>

            <div>
                <label for="price">Price</label>
                <input type="text" data-ng-model="Book.Price" />
            </div>
            <br />
            <div>
                <button data-ng-click="save()">Save</button>
                <button data-ng-click="clear()">Clear</button>
            </div>
        </div>
    </div>
</div>